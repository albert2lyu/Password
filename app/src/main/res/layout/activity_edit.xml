<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.daggerstudio.password.EditActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="项目名"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/edit_et_brief"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_et_brief"
        android:singleLine="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="用户名"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/edit_et_usrname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_et_usrname"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/edit_et_brief"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_alignRight="@+id/edit_et_brief"
        android:layout_alignEnd="@+id/edit_et_brief" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:text="密码"
        android:layout_alignBottom="@+id/edit_et_pwd"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_et_pwd"
        android:singleLine="true"
        android:layout_below="@id/edit_et_usrname"
        android:layout_marginTop="26dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/edit_et_usrname"
        android:layout_alignStart="@+id/edit_et_usrname" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生成随机密码"
        android:id="@+id/edit_gen_btn"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/edit_et_pwd"
        android:layout_alignRight="@+id/edit_et_pwd"
        android:layout_alignEnd="@+id/edit_et_pwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="网址"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/edit_et_site"
        android:layout_toLeftOf="@+id/edit_et_usrname"
        android:layout_toStartOf="@+id/edit_et_usrname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_et_site"
        android:inputType="textWebEmailAddress"
        android:layout_below="@+id/edit_gen_btn"
        android:layout_marginTop="14dp"
        android:layout_alignLeft="@+id/edit_et_pwd"
        android:layout_alignStart="@+id/edit_et_pwd"
        android:layout_alignRight="@+id/edit_gen_btn"
        android:layout_alignEnd="@+id/edit_gen_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="备注"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/edit_et_note"
        android:layout_toLeftOf="@+id/edit_et_usrname"
        android:layout_toStartOf="@+id/edit_et_usrname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edit_et_note"
        android:layout_below="@+id/edit_et_site"
        android:layout_marginTop="14dp"
        android:layout_alignRight="@+id/edit_et_site"
        android:layout_alignEnd="@+id/edit_et_site"
        android:layout_above="@+id/edit_post_btn"
        android:layout_marginBottom="14dp"
        android:layout_alignLeft="@+id/edit_et_site"
        android:layout_alignStart="@+id/edit_et_site" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认添加"
        android:id="@+id/edit_post_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/edit_et_note"
        android:layout_alignEnd="@+id/edit_et_note"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
