<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daggerstudio.password.EntranceActivityForVE">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/entrance_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="@color/athens_gray"
        android:hint="your password here"
        android:id="@+id/entrance_pwd_et"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/entrance_login_btn"
        android:layout_below="@+id/entrance_pwd_et"
        android:layout_alignLeft="@+id/entrance_pwd_et"
        android:layout_alignStart="@+id/entrance_pwd_et"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/entrance_pwd_et"
        android:layout_alignEnd="@+id/entrance_pwd_et" />

</RelativeLayout>
